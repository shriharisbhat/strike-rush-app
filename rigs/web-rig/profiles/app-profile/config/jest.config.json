{
  "extends": "@rushstack/heft-jest-plugin/includes/jest-shared.config.json",
  "testEnvironment": "jsdom",
  "reporters": ["default", ["jest-junit", { "outputDirectory": "temp/jest-reports" }]],
  "clearMocks": true,
  "restoreMocks": true,
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
